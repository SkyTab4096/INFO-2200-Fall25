<Window x:Class="_2200_AndersonK_Participation03.detailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2200_AndersonK_Participation03"
        mc:Ignorable="d"
        Title="detailsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LblName"
            Content="Name: "
            Grid.Row="0"
            Grid.Column="0"
            FontSize="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"/>
        <Label x:Name="LblEnvironment"
            Content="Environment: "
            Grid.Row="1"
            Grid.Column="0"
            FontSize="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"/>
        <Label x:Name="LblType"
            Content="Type: "
            Grid.Row="2"
            Grid.Column="0"
            FontSize="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"/>
        <Label x:Name="LblNameResults"
               Content="Results . . ."               
               Grid.Row="0"
               Grid.Column="1"
               FontSize="25"
               VerticalAlignment="Center"      
               />
        <Label x:Name="LblEnvironmentResults"
               Content="Results . . ."               
               Grid.Row="1"
               Grid.Column="1"
               FontSize="25"
               VerticalAlignment="Center"      
               />
        <Label x:Name="LblTypeResults"
               Content="Results . . ."               
               Grid.Row="2"
               Grid.Column="1"
               FontSize="25"
               VerticalAlignment="Center"      
               />
        <Button x:Name="BtnSniff"
            Content="Sniff"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10"
            FontSize="25"
            Click="BtnSniff_Click"/>
    </Grid>
</Window>
