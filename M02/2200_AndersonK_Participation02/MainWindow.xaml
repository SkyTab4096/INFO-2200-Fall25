<Window x:Class="_2200_AndersonK_Participation02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2200_AndersonK_Participation02"
        mc:Ignorable="d"
        Title="Kory's Favorite Phones" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cbPhones"
                  Margin="30"
                  FontSize="30"
                  Grid.Row="0"
                  VerticalContentAlignment="Center"/>
        <Button x:Name="BtnPhoneDetails"
                FontSize="30"
                Content="Show Phone Details"
                Grid.Row="1"
                Margin="30"
                Click="BtnPhoneDetails_Click"/>
    </Grid>
</Window>
